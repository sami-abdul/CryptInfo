<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/colorBlueGrey700"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_coin_logo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="350"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1000"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/current_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:alpha="0.7"
            android:text="@string/dollar_sign"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#ffffff"
            android:textSize="32sp"
            android:textStyle="bold"
            android:text="@string/fake_price" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="650"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="618"
            android:orientation="vertical">

            <TextView
                android:id="@+id/change_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="@color/colorGreen700"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="@string/fake_change_percent" />

            <TextView
                android:id="@+id/change_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:alpha="0.7"
                android:textColor="@color/colorGreen700"
                android:textSize="20sp"
                android:text="@string/fake_change" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>