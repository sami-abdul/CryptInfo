<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tss.cryptinfo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".CryptoCoinApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".actvities.CoinsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actvities.CoinDetailActivity"
            android:parentActivityName=".actvities.CoinsActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".services.CoinSyncIntentService"
            android:exported="false" />

        <provider
            android:name=".api.CoinProvider"
            android:authorities="com.xiongxh.cryptocoin"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".services.CoinTaskService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".services.DetailIntentService"
            android:exported="false" />
        <service
            android:name=".services.DetailTaskService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".actvities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".actvities.CoinsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="CoinsActivity" />
        </activity>

        <service
            android:name=".views.widget.CoinWidgetRemoteService"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>

        <receiver android:name=".views.widget.CoinWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="ACTION_DATA_UPDATED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/coin_widget_provider_info" />
        </receiver>
    </application>

</manifest>